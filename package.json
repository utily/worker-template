{
  "name": "@utily/worker-template",
  "version": "0.0.0",
  "description": "Typescript template for Cloudflare Worker.",
  "author": "Cloudly",
  "license": "MIT",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "jest": {
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(cryptly|authly|isoly|gracely|cloud-http|cloud-router)/.*)"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json",
        "setTimeout": 2000
      }
    },
    "testEnvironment": "node",
    "testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules/",
      "dist/"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js,jsx}",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "preset": "ts-jest",
    "testMatch": null
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "NODE_ENV=development npm run build",
    "lint": "eslint '**/*.{ts,tsx}'",
    "fix": "eslint '**/*.{ts,tsx}' --fix",
    "clean": "rimraf dist node_modules coverage",
    "test": "jest --maxWorkers=2",
    "test:watch": "watch jest",
    "transpile": "tsc --project tsconfig.test.json",
    "deploy": "wrangler login && wrangler publish; wrangler logout",
    "login": "wrangler login",
    "start": "wrangler dev --env development"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.1.1",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "eslint": "8.1.0",
    "eslint-plugin-prettierx": "github:nilssonemma/eslint-plugin-prettierx#master",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.3.1",
    "prettierx": "github:simonmika/prettierx#newline-before-clause",
    "rimraf": "^3.0.2",
    "rollup": "^2.59.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.0.7",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "authly": "^0.2.8",
    "cloud-formdata": "^0.0.7",
    "cloud-http": "^0.0.31",
    "cloud-router": "^0.0.15",
    "gracely": "^0.1.8"
  }
}
